<plugin>

   <extension
         point="org.eclipse.ui.views">
      <category
            name="Test2Feature Mapper"
            id="br.ufmg.dcc.t2fm">
      </category>
      <view
            name="T2FMapping View"
            icon="icons/sample.gif"
            category="br.ufmg.dcc.t2fm"
            class="br.ufmg.dcc.t2fm.views.MapView"
            id="br.ufmg.dcc.t2fm.views.MapView">
      </view>
   </extension>
   
   <extension
         point="org.eclipse.ui.perspectiveExtensions">
      <perspectiveExtension
            targetID="org.eclipse.jdt.ui.JavaPerspective">
         <view
               ratio="0.7"
               relative="org.eclipse.jdt.ui.PackageExplorer"
               relationship="bottom"
               id="br.ufmg.dcc.t2fm.views.MapView">
         </view>
      </perspectiveExtension>
   </extension>
   
   <extension
         point="org.eclipse.ui.popupMenus">
      <objectContribution
            objectClass="org.eclipse.core.resources.IFile"
            nameFilter="*.cm"
            id="br.ufmg.dcc.t2fm.cm.popup">
         <action
               enablesFor="1"
               label="Load Features"
               class="br.ufmg.dcc.t2fm.actions.LoadConcernModelAction"
               menubarPath="group.cm"
               id="br.ufmg.dcc.t2fm.actions.LoadConcernModelAction"/>
      </objectContribution>
      <objectContribution
            adaptable="false"
            id="br.ufmg.dcc.t2fm.addToFeatureObjectContribution"
            objectClass="org.eclipse.jdt.core.IJavaElement">
         <action
               class="br.ufmg.dcc.t2fm.actions.AddToConcernAction"
               icon="icons/sample.gif"
               id="br.ufmg.dcc.t2fm.addToFeatureAction"
               label="Add to Feature"
               style="pulldown">
         </action>
      </objectContribution>
      
      <viewerContribution
            id="br.ufmg.dcc.t2fm.addToFeatureEditorContribution"
            targetID="org.eclipse.jdt.ui.CompilationUnitEditor.EditorContext">
         <action
               class="br.ufmg.dcc.t2fm.actions.AddToConcernAction"
               id="br.ufmg.dcc.t2fm.addToFeatureEditorAction"
               label="Add to Feature"
               menubarPath="additions"
               style="pulldown"/>
      </viewerContribution>
   </extension>
   
   <extension
         point="org.eclipse.ui.decorators">
      <decorator
         	id="br.ufmg.dcc.t2fm.decorator"
         	label="Concern Mapper Decorator"
         	class="br.ufmg.dcc.t2fm.decorators.LightWeightDecorator"
         	adaptable="false"
         	state="true"
         	lightweight="true"
         	location="BOTTOM_RIGHT">
         <description>
         	ConcernMapper decorator displays elements belonging to the concern model in bold and adds the name of the concerns it belongs to as a suffix. Parents of concern elements can also be decorated (see the Preferences Page).
         </description>
         <enablement>
         	<objectClass name="java.lang.Object"/>
         </enablement>
      </decorator>
   </extension>
   <extension
         point="org.eclipse.ui.preferencePages">
      <page
            name="Test2Feature Mapper"
            class="br.ufmg.dcc.t2fm.ui.ConcernMapperPreferencePage"
            id="br.ufmg.dcc.t2fm.ConcernMapperPreferencePage">
      </page>
   </extension>
   <extension 
   		point="org.eclipse.core.runtime.preferences">
	  <initializer 
	  	class="br.ufmg.dcc.t2fm.ConcernMapperPreferenceInitializer"/>
   </extension>
   <!--  -->
   
   <!-- Launch Configuration Type -->
	
	<!-- Launch Modes -->
	<extension point="org.eclipse.debug.core.launchModes">
		<launchMode
			label="Coverage"
			mode="coverage">
		</launchMode>
	</extension>
	
	<!-- Launch Delegates -->
    
    <!-- Launch Shortcut -->
   
    <!-- Launch Groups -->	
   	<extension point = "org.eclipse.debug.ui.launchGroups">
		<launchGroup
			id = "br.ufmg.dcc.t2fm.launchGroup.coverage"
			mode = "coverage"
			label ="Coverage"
			image = "icons/full/ctool16/debug_exc.gif"
			bannerImage = "icons/full/wizban/debug_wiz.gif">
		</launchGroup>
		<launchGroup
			id = "org.eclipse.debug.ui.launchGroup.run"
			mode = "run"
			label = "Run"
			image = "icons/full/ctool16/run_exc.gif"
			bannerImage = "icons/full/wizban/run_wiz.gif">
		</launchGroup> 
	</extension>
   <!--  -->
   <!--  -->
   <!--  backup  -->
   <!--  -->
   <!--  -->
   
	<!-- : EclEmma-UI extensions :-->
	<!--  Property Tester-->   
	   <extension
         point="org.eclipse.core.expressions.propertyTesters">
      <propertyTester
            class="com.mountainminds.eclemma.internal.ui.actions.ContextualLaunchableTester"
            id="com.mountainminds.eclemma.ui.propertyTester.contextualLaunchable"
            namespace="com.mountainminds.eclemma.ui"
            properties="launchable"
            type="java.lang.Object"/>
   		</extension>
	   <!--extension  point="org.eclipse.core.expressions.propertyTesters">
	   	<propertyTester
	   		class="br.ufmg.dcc.t2fm.launching.FetureNodeLaunchableTester"
            id="br.ufmg.dcc.t2fm.launching.propertyTester.contextualLaunchable"
            namespace="br.ufmg.dcc.t2fm.ui"
            properties="launchable"
            type="br.ufmg.dcc.t2fm.views.components.ConcernNode"/>
        </extension-->
	<!-- Launch Shortcuts -->
	<extension
         point="org.eclipse.debug.ui.launchShortcuts">
      <shortcut
            label="JUnit Testt"
            icon="icons/junit_launch.gif"
            class="com.mountainminds.eclemma.ui.launching.CoverageLaunchShortcut:org.eclipse.jdt.junit.junitShortcut"
            modes="run , coverage"
            id="com.mountainminds.eclemma.ui.junitShortcut">
            <perspective id="org.eclipse.jdt.ui.JavaPerspective"/>
         <contextualLaunch>
           <enablement>
             <with variable="selection">
               <test
					property="com.mountainminds.eclemma.ui.launchable" 
              		args="org.eclipse.jdt.junit.junitShortcut"/>
             </with>

           </enablement>
         </contextualLaunch>
      </shortcut>
   </extension>
   <!-- Commands -->
    <extension
         point="org.eclipse.ui.commands">
      <category
            id="com.mountainminds.eclemma.ui"
            name="Test2Feature Mapper">
      </category>
     
      <command
            categoryId="org.eclipse.debug.ui.category.run"
            description="%CoverageJUnitTestCommand.description"
            id="com.mountainminds.eclemma.ui.junitShortcut.coverage"
            name="%CoverageJUnitTestCommand.name"/>
   </extension>
   <!-- Key Bindings -->
   <extension
         point="org.eclipse.ui.bindings">
       <key
            commandId="com.mountainminds.eclemma.ui.junitShortcut.coverage"
            contextId="org.eclipse.ui.globalScope"
            schemeId="org.eclipse.ui.defaultAcceleratorConfiguration"
            sequence="M3+M2+E T"/>
   </extension>
   <!-- Perspective Extensions -->
   <extension
         point="org.eclipse.ui.perspectiveExtensions">
      <perspectiveExtension targetID="org.eclipse.jdt.ui.JavaPerspective">
         <actionSet id="com.mountainminds.eclemma.ui.CoverageActionSet"/>
         <showInPart id="com.mountainminds.eclemma.ui.CoverageView"/>
      </perspectiveExtension>
   </extension>
   <!-- Configuration Tab Groups -->
   <extension
         point="org.eclipse.debug.ui.launchConfigurationTabGroups">
      <launchConfigurationTabGroup
            class="com.mountainminds.eclemma.ui.launching.CoverageTabGroup"
            helpContextId="com.mountainminds.eclemma.ui.coverage_launch_context"
            id="com.mountainminds.eclemma.ui.JUnitTabGroup"
            type="org.eclipse.jdt.junit.launchconfig">
         <launchMode
               description="%junitTabGroupDescription.coverage"
               mode="coverage"/>
      </launchConfigurationTabGroup>
   </extension>
   <!-- : EclEmma-Core Extensions : -->
   <!-- Launch Delegates-->
   <extension
         point="org.eclipse.debug.core.launchDelegates">
      <launchDelegate
            delegate="com.mountainminds.eclemma.core.launching.JavaApplicationLauncher"
            id="com.mountainminds.eclemma.core.junitLauncher"
            modes="coverage"
            name="%junitDelegateName"
            type="org.eclipse.jdt.junit.launchconfig"/>
   </extension>
   <extension
         point="org.eclipse.core.runtime.adapters">
      <factory
      		class=""
            adaptableType="br.ufmg.dcc.t2fm.views.components.ConcernNode">
         <adapter
               type="org.eclipse.debug.ui.actions.ILaunchable">
         </adapter>
      </factory>
      <!--factory
      		class = "br.ufmg.dcc.t2fm.launching.adapter.FeatureNodeAdapterFactory"
            adaptableType="br.ufmg.dcc.t2fm.views.components.ConcernNode">
         <adapter
               type="org.eclipse.core.resources.mapping.ResourceMapping">
         </adapter>
      </factory-->
   </extension>
   <!-- End EclEmma Config -->
</plugin>

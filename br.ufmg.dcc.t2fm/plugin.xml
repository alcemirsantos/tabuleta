<plugin>

   <extension
         point="org.eclipse.ui.views">
      <category
            name="Test2Feature Mapper"
            id="br.ufmg.dcc.t2fm">
      </category>
      <view
            name="Map View"
            icon="icons/sample.gif"
            category="br.ufmg.dcc.t2fm"
            class="br.ufmg.dcc.t2fm.views.MapView"
            id="br.ufmg.dcc.t2fm.views.MapView">
      </view>
   </extension>
   
   <extension
         point="org.eclipse.ui.perspectiveExtensions">
      <perspectiveExtension
            targetID="org.eclipse.jdt.ui.JavaPerspective">
         <view
               ratio="0.7"
               relative="org.eclipse.jdt.ui.PackageExplorer"
               relationship="bottom"
               id="br.ufmg.dcc.t2fm.views.MapView">
         </view>
      </perspectiveExtension>
   </extension>
   
   <extension
         point="org.eclipse.ui.popupMenus">
      <objectContribution
            objectClass="org.eclipse.core.resources.IFile"
            nameFilter="*.cm"
            id="br.ufmg.dcc.t2fm.cm.popup">
         <action
               enablesFor="1"
               label="Load Features"
               class="br.ufmg.dcc.t2fm.actions.LoadConcernModelAction"
               menubarPath="group.cm"
               id="br.ufmg.dcc.t2fm.actions.LoadConcernModelAction"/>
      </objectContribution>
      <objectContribution
            adaptable="false"
            id="br.ufmg.dcc.t2fm.addToFeatureObjectContribution"
            objectClass="org.eclipse.jdt.core.IJavaElement">
         <action
               class="br.ufmg.dcc.t2fm.actions.AddToConcernAction"
               icon="icons/sample.gif"
               id="br.ufmg.dcc.t2fm.addToFeatureAction"
               label="Add to Feature"
               style="pulldown">
         </action>
      </objectContribution>
      
      <viewerContribution
            id="br.ufmg.dcc.t2fm.addToFeatureEditorContribution"
            targetID="org.eclipse.jdt.ui.CompilationUnitEditor.EditorContext">
         <action
               class="br.ufmg.dcc.t2fm.actions.AddToConcernAction"
               id="br.ufmg.dcc.t2fm.addToFeatureEditorAction"
               label="Add to Feature"
               menubarPath="additions"
               style="pulldown"/>
      </viewerContribution>
   </extension>
   
   <extension
         point="org.eclipse.ui.decorators">
      <decorator
         	id="br.ufmg.dcc.t2fm.decorator"
         	label="Concern Mapper Decorator"
         	class="br.ufmg.dcc.t2fm.decorators.LightWeightDecorator"
         	adaptable="false"
         	state="true"
         	lightweight="true"
         	location="BOTTOM_RIGHT">
         <description>
         	ConcernMapper decorator displays elements belonging to the concern model in bold and adds the name of the concerns it belongs to as a suffix. Parents of concern elements can also be decorated (see the Preferences Page).
         </description>
         <enablement>
         	<objectClass name="java.lang.Object"/>
         </enablement>
      </decorator>
   </extension>
   <extension
         point="org.eclipse.ui.preferencePages">
      <page
            name="Test2Feature Mapper"
            class="br.ufmg.dcc.t2fm.ui.ConcernMapperPreferencePage"
            id="br.ufmg.dcc.t2fm.ConcernMapperPreferencePage">
      </page>
   </extension>
   <extension 
   		point="org.eclipse.core.runtime.preferences">
	  <initializer 
	  	class="br.ufmg.dcc.t2fm.ConcernMapperPreferenceInitializer"/>
   </extension>
   <!--  -->
   
   <!-- Launch Configuration Type -->
	<extension point = "org.eclipse.debug.core.launchConfigurationTypes">
	   <launchConfigurationType
	   	   id="br.ufmg.dcc.t2fm.launching.featureTestsFiles"
	   	   name="Feature Tests Files"
	   	   delegate="com.mountainminds.eclemma.core.launching.JavaApplicationLauncher"
	   	   modes= "run, coverage"
	   	   sourceLocatorId="org.eclipse.jdt.launching.sourceLocator.JavaSourceLookupDirector"
	   	   sourcePathComputerId="org.eclipse.jdt.launching.sourceLookup.javaSourcePathComputer">
	   </launchConfigurationType>
	</extension>
	
	<!-- Launch Modes -->
	<extension point="org.eclipse.debug.core.launchModes">
		<launchMode
			label="Coverage"
			mode="coverage">
		</launchMode>
	</extension>
	
	<!-- Launch Delegates -->
	<extension point="org.eclipse.debug.core.launchDelegates">
		<launchDelegate
			id="br.ufmg.dcc.t2fm.feature.CoverageDelegate"
			delegate="com.mountainminds.eclemma.core.launching.JavaApplicationLauncher"
			type="br.ufmg.dcc.t2fm.launching.featureTestsFiles"
			modes="coverage">
		</launchDelegate>
 	</extension>
    
    <!-- Launch Shortcut -->
    <extension point="org.eclipse.debug.ui.launchShortcuts">
    	<shortcut
    	   id="br.ufmg.dcc.t2fm.feature.CodeLocationShortcut"
    	   class="com.mountainminds.eclemma.ui.launching.CoverageLaunchShortcut"
    	   label="JUnit Testtt"
    	   icon="icons/full/ctool16/java_applet.gif"
    	   modes="run, coverage">
               <perspective id="org.eclipse.jdt.ui.JavaPerspective"/>
   		</shortcut>
   	</extension>
   
    <!-- Launch Groups -->	
   	<extension point = "org.eclipse.debug.ui.launchGroups">
		<launchGroup
			id = "br.ufmg.dcc.t2fm.launchGroup.coverage"
			mode = "coverage"
			label ="Coverage"
			image = "icons/full/ctool16/debug_exc.gif"
			bannerImage = "icons/full/wizban/debug_wiz.gif">
		</launchGroup>
		<launchGroup
			id = "org.eclipse.debug.ui.launchGroup.run"
			mode = "run"
			label = "Run"
			image = "icons/full/ctool16/run_exc.gif"
			bannerImage = "icons/full/wizban/run_wiz.gif">
		</launchGroup> 
	</extension>
   <!--  -->
</plugin>
